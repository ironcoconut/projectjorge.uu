<h2 class="bottom-margin-0"><%= garden.name %></h2>
<p><small><%= link_to "map", "https://www.google.com/maps/place/#{garden.location}", :target => :_blank %> | <%= link_to "view", garden %> | <%= link_to "edit", [:edit, garden] %></small></p>
<%= content_tag :p, garden.description %>
<h6>All Reports:</h6>
<% garden.reports.each do |report| %>
  <div class="row bottom-margin-10">
    <div class="col-xs-4">
      <%= image_tag report.photo.url, class: "img-responsive" %>
    </div>
    <div class="col-xs-8">
      <p><%= report.created_at.to_date %></p>
      <p><%= report.notes %></p>
      <p><small><%= link_to("view report", [garden, report]) %> | <%= link_to("edit report", [:edit, garden, report]) %></small></p>
    </div>
  </div>
<% end %>
