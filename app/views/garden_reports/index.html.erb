<h1>Garden Reports</h1>

<table>
  <thead>
    <tr>
      <th>Notes</th>
      <th>Garden</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @garden_reports.each do |report| %>
      <tr>
        <td><%= report.notes %></td>
        <td><%= report.garden.name %></td>
        <td><%= link_to 'Show', [report.garden,report] %></td>
        <td><%= link_to 'Edit', [:edit, report.garden,report] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Garden Report', new_garden_garden_report_path(@garden) %>
